files:
  /etc/cron.d/announce_next_race:
    mode: "000644"
    owner: root
    group: root
    content: |
      0 20 * * 2 root /opt/elasticbeanstalk/support/envvars && /usr/local/bin/announce_next_race.sh

  /usr/local/bin/announce_next_race.sh:
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash

      cd /var/app/current
      node ./bot/scripts/next.js

      exit 0

commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/announce_next_race.bak"

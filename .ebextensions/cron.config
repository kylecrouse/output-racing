files:
    "/etc/cron.d/mycron":
        mode: "000644"
        owner: root
        group: root
        content: |
            50 23 * * 5 root /usr/local/bin/announcenextrace.sh

    "/usr/local/bin/announcenextrace.sh":
        mode: "000755"
        owner: root
        group: root
        content: |
            #!/bin/bash

            node /var/app/current/bot/scripts/next.js

            exit 0

commands:
    remove_old_cron:
        command: "rm -f /etc/cron.d/mycron.bak"
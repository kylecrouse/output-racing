files:
  /etc/cron.d/announce_next_race:
    mode: "000644"
    owner: root
    group: root
    content: |
      0 20 * * 2 root /etc/profile.d/sh.local && /usr/local/bin/announce_next_race.sh >> /var/log/announce_next_race.log 2>&1

  /etc/cron.d/announce_news:
    mode: "000644"
    owner: root
    group: root
    content: |
      5 * * * * root /etc/profile.d/sh.local && /usr/local/bin/announce_news.sh >> /var/log/announce_news.log 2>&1

  /usr/local/bin/announce_next_race.sh:
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash

      cd /var/app/current
      node ./bot/scripts/next.js

      exit 0

  /usr/local/bin/announce_news.sh:
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash

      cd /var/app/current
      node ./bot/scripts/news.js

      exit 0

commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/*.bak"
